{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES6",
		"outDir": "out",
		"lib": [
			"ES6",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true, 
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"paths": {
			"@/*": ["./src/*"]
		  }
	}
}
